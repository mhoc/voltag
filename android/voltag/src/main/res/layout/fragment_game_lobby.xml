<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="edu.purdue.voltag.fragments.GameLobbyFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/gamelobby_tv_lobbyid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:paddingBottom="30dp"
        android:textColor="#F00"
        android:text="LOBBY ID"
        />

    <TextView
        android:id="@+id/gamelobby_tv_whosit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gamelobby_tv_lobbyid"
        android:text="ImItYeezy3000"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        />

    <ListView
        android:id="@android:id/list"
        android:layout_below="@id/gamelobby_tv_whosit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@android:id/empty"
        android:layout_below="@id/gamelobby_tv_whosit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/gamelobby_tv_whosit"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
